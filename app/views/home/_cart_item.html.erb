<% if cart_item == @current_item %>
  <tr id="current_item" class="cart-bg">
<% else %>
  <tr class="cart-bg">
<% end %>
  <td><%= cart_item.quantity %>&times;</td>
  <td><%=h cart_item.title %></td>
  <td class="item-price"><%= number_to_currency(cart_item.price, :unit => "R$ ", :separator => ",", :delimiter => ".") %></td>
</tr>
