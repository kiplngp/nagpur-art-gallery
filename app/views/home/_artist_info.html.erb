	<ul class="tabs">
		<li><a href="#tab1">Artist Info</a></li>
		<li><a href="#tab2">Socialize</a></li>
	</ul>
	<div class="tab_container">
		<% for artist in artist_infos %>
		<div id="tab1" class="tab_content tabc">
			<div class="artists_info"> 
				<% if artist.photo.url(:thumb) == "/photos/thumb/missing.png" %> 
					<img src="/images/default.gif">
				<% else %>
					<%= image_tag artist.photo.url(:thumb),{ :title => "#{artist.name}"} %> 
				<% end %>         
				<div><span class="bio"><%= artist.name %> Biography</span><br/><%= artist.artist_info %></div>
      		</div>
    	</div>
		<div id="tab2" class="tab_content">
			<div class="artists_info">            
				
				<div style="padding-top:40px;">
					<script type="text/javascript">
						var act = new gigya.services.socialize.UserAction();
						act.setUserMessage("This is the user message");
						act.setTitle("The Nagpur Art Gallery Team");
						act.setLinkBack("http://www.nagpurartgallery.com/artworks/<%= @urlname %>");
						act.setDescription("Original Art for Sale | Landscape and Contemporary Art Paintings from One of the Best Online site.");
						act.addActionLink("Read More", "http://www.nagpurartgallery.com");
						var showShareBarUI_params=
						{ 
						  containerID: 'componentDiv',
						  shareButtons: 'Share,Facebook,Email,Twitter,LinkedIn,Google,Messenger,Myspace',
						  showCounts: 'none',
						  userAction: act
						}
						</script>
						<div id="componentDiv"></div>
						<script type="text/javascript">
						   gigya.services.socialize.showShareBarUI(conf,showShareBarUI_params);
					</script>
				</div>
       		</div>
		</div>
		<% end %>
	</div>